<div id="sw_calculation" class="container-fluid">
    <h2>{{ lang['heading_title'] }}</h2>
    <h3>{{ lang['description'] }}</h3>
    <form class="row">
        {% for value in data['sw_calculation'] %}
            <div class="col-xs-12 col-sm-6 col-lg-4">
                <input
                    name="{{ value['name'] }}"
                    type="{{ value['type'] }}"
                    placeholder="{{ value['placeholder'] }}"
                    minlength="{{ value['minlength'] }}"
                    maxlength="{{ value['maxlength'] }}"

                    {% if value['required'] == 0 %}
                        required
                    {% endif %}

                    class="form-control"
                >
            </div>
        {% endfor %}

        <div class="text-center">
            <button type="submit" class="btn btn-default" data-loading-text="{{ lang['button_loading_text'] }}" data-success="{{ lang['button_success'] }}" data-error="{{ lang['button_error'] }}">{{ lang['button'] }}</button>
        </div>
    </form>
</div>